/**
 * Implements hook_cron().
 */
function icasus_cron() {
  $request = drupal_http_request(variable_get
  ('block_icasus_url'));
  $json_response = drupal_json_decode($request->data);
  $i = 0;
  foreach ($json_response as $data) {
    variable_set("icasus_data_" . $i, $data);
    $i = $i + 1;
  }

}